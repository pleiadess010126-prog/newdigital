// =============================================================================
// HELPDESK & SUPPORT TICKET SYSTEM
// =============================================================================

enum TicketStatus {
  open
  in_progress
  waiting_on_customer
  waiting_on_support
  resolved
  closed
}

enum TicketPriority {
  low
  medium
  high
  critical
}

enum TicketCategory {
  technical
  billing
  feature_request
  bug_report
  account
  integration
  content
  general
}

/// SupportTicket - User support tickets managed by support team
model SupportTicket {
  id             String         @id @default(cuid())
  ticketNumber   String         @unique // Human-readable ticket number like TKT-2026-0001
  organizationId String?
  userId         String
  
  // Ticket Details
  subject        String
  description    String
  category       TicketCategory @default(general)
  priority       TicketPriority @default(medium)
  status         TicketStatus   @default(open)
  
  // Assignment
  assignedToId   String?        // Support team member assigned
  
  // Source tracking
  source         String         @default("user")  // user, nandu, email, api
  nanduContext   Json?          // Context from Nandu conversation if escalated
  
  // Resolution
  resolution     String?
  resolvedAt     DateTime?
  resolvedById   String?
  
  // Customer satisfaction
  rating         Int?           // 1-5 star rating
  feedback       String?
  
  // SLA tracking
  firstResponseAt DateTime?
  slaBreached    Boolean        @default(false)
  
  // Timestamps
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  closedAt       DateTime?
  
  // Relations
  messages       TicketMessage[]
  attachments    TicketAttachment[]
  
  @@index([ticketNumber])
  @@index([userId])
  @@index([organizationId])
  @@index([status])
  @@index([priority])
  @@index([category])
  @@index([assignedToId])
  @@index([createdAt])
  @@map("support_tickets")
}

/// TicketMessage - Conversation thread on a support ticket
model TicketMessage {
  id        String   @id @default(cuid())
  ticketId  String
  senderId  String   // User ID of sender (customer or support agent)
  senderType String  @default("user") // user, support, system, nandu
  
  message   String
  isInternal Boolean @default(false) // Internal notes not visible to customer
  
  // Timestamps
  createdAt DateTime @default(now())
  
  // Relations
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@index([ticketId])
  @@index([senderId])
  @@index([createdAt])
  @@map("ticket_messages")
}

/// TicketAttachment - Files attached to tickets
model TicketAttachment {
  id        String   @id @default(cuid())
  ticketId  String
  fileName  String
  fileUrl   String
  fileSize  Int
  mimeType  String
  uploadedBy String
  
  createdAt DateTime @default(now())
  
  // Relations
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@index([ticketId])
  @@map("ticket_attachments")
}

