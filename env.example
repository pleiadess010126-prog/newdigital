# ===============================================
# DigitalMEng Environment Variables
# ===============================================
# Copy this file to .env.local and fill in your API keys

# ===============================================
# AI Services
# ===============================================
NEXT_PUBLIC_OPENAI_API_KEY=sk-xxx
NEXT_PUBLIC_ANTHROPIC_API_KEY=sk-ant-xxx
NEXT_PUBLIC_ELEVENLABS_API_KEY=your-elevenlabs-api-key
NEXT_PUBLIC_DID_API_KEY=your-did-api-key
NEXT_PUBLIC_STABILITY_API_KEY=sk-xxx

# ===============================================
# Payment Gateways
# ===============================================
# Stripe
STRIPE_SECRET_KEY=sk_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Razorpay (for India payments)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_xxx
RAZORPAY_KEY_SECRET=your-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# ===============================================
# AWS Infrastructure
# ===============================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ===============================================
# Database
# ===============================================
DATABASE_URL=postgresql://user:password@localhost:5432/digitalmeng

# ===============================================
# Authentication
# ===============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key

# ===============================================
# Translation Services
# ===============================================
DEEPL_API_KEY=your-deepl-key
GOOGLE_TRANSLATE_API_KEY=your-google-key

# ===============================================
# Analytics
# ===============================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id
