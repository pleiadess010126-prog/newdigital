# ===========================================
# CONTENT CREATION: TRANSLATION
# ===========================================
# SaaS-provided

# DeepL Translation
# Get key at: https://www.deepl.com/pro-api
DEEPL_API_KEY=

# Google Cloud Translation
GOOGLE_TRANSLATE_PROJECT_ID=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DigitalMEng

# JWT Secret for session management
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===========================================
# OPTIONAL: ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxxx

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development
DEBUG=false

# ============================================================
#
# USER-CONFIGURED (NOT in .env - via UI Settings)
#
# Each user connects their OWN social media accounts:
#
# ✅ Meta (Facebook/Instagram) - Meta Setup Wizard
# ✅ YouTube - OAuth connection
# ✅ Twitter/X - API credentials
# ✅ LinkedIn - OAuth connection
# ✅ TikTok - API credentials
# ✅ WordPress - Site URL + App Password
# ✅ FTP/SFTP - Server credentials
#
# ============================================================
