# DigitalMEng Environment Variables
# Copy this file to .env.local and fill in your values
#
# ============================================================
# ARCHITECTURE OVERVIEW:
# ============================================================
#
# SYSTEM-LEVEL (in this .env file):
#   - Infrastructure (AWS, Stripe)
#   - AI Content Creation (SaaS-provided service)
#   - App configuration
#
# USER-LEVEL (configured in UI, stored in database):
#   - Social Media platforms (each user's own accounts)
#   - Meta, YouTube, Twitter, LinkedIn, TikTok, WordPress, FTP
#
# ============================================================

# ===========================================
# INFRASTRUCTURE: AWS COGNITO (Authentication)
# ===========================================
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_REGION=us-east-1

# ===========================================
# INFRASTRUCTURE: AWS SERVICES (S3, DynamoDB)
# ===========================================
CUSTOM_AWS_ACCESS_KEY_ID=
CUSTOM_AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# S3 Bucket for media uploads
S3_BUCKET_NAME=digitalmeng-media

# DynamoDB table prefix
DYNAMODB_TABLE_PREFIX=digitalmeng_

# DynamoDB table names (optional - defaults will be used if not set)
DYNAMODB_CAMPAIGNS_TABLE=DigitalMEng-Campaigns
DYNAMODB_CONTENT_TABLE=DigitalMEng-ContentItems
DYNAMODB_PILLARS_TABLE=DigitalMEng-TopicPillars

# ===========================================
# DATABASE: POSTGRESQL (via Prisma ORM)
# ===========================================
# Primary database for relational data (users, orgs, content, etc.)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# 
# Local development:
DATABASE_URL="postgresql://postgres:password@localhost:5432/digitalmeng?schema=public"
#
# Production options:
# - AWS RDS PostgreSQL
# - Supabase: postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
# - PlanetScale: mysql://... (change provider in schema.prisma)
# - Neon: postgresql://[user]:[password]@[endpoint].neon.tech/[database]

# ===========================================
# INFRASTRUCTURE: STRIPE (Payments & Billing)
# ===========================================
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_xxxxxxxxxxxxxxxx
STRIPE_PRICE_STARTER_YEARLY=price_xxxxxxxxxxxxxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxxxxxxxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxxxxxxxxxxxxx

# ===========================================
# CONTENT CREATION: AI TEXT GENERATION
# ===========================================
# SaaS-provided - users get AI credits with subscription

# OpenAI (GPT-4, GPT-3.5)
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-

# Anthropic (Claude)
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-

# AWS Bedrock (uses AWS credentials above)
# No additional key needed

# ===========================================
# CONTENT CREATION: AI VIDEO GENERATION
# ===========================================
# SaaS-provided - users get video credits with subscription

# D-ID (AI Avatar Videos)
# Get key at: https://studio.d-id.com
DID_API_KEY=

# Synthesia (AI Video Generation)
# Get key at: https://www.synthesia.io
SYNTHESIA_API_KEY=

# Pictory (Stock Video + Voiceover)
# Get key at: https://pictory.ai
PICTORY_API_KEY=

# ===========================================
# CONTENT CREATION: AI VOICE GENERATION
# ===========================================
# SaaS-provided

# ElevenLabs (AI Voice/TTS)
# Get key at: https://elevenlabs.io
ELEVENLABS_API_KEY=
ELEVENLABS_DEFAULT_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# ===========================================
# CONTENT CREATION: AI IMAGE GENERATION
# ===========================================
# Uses OpenAI DALL-E (same OPENAI_API_KEY above)

# Stability AI (Stable Diffusion) - Optional alternative
# Get key at: https://stability.ai
STABILITY_API_KEY=

# ===========================================
# CONTENT CREATION: TRANSLATION
# ===========================================
# SaaS-provided

# DeepL Translation
# Get key at: https://www.deepl.com/pro-api
DEEPL_API_KEY=

# Google Cloud Translation
GOOGLE_TRANSLATE_PROJECT_ID=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DigitalMEng
NEXT_PUBLIC_APP_VERSION=1.0.0

# JWT Secret for session management (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Session cookie configuration
SESSION_COOKIE_NAME=session_token
SESSION_MAX_AGE=604800

# ===========================================
# SECURITY: RATE LIMITING
# ===========================================
# API rate limits (requests per minute)
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_GENERATE=20
RATE_LIMIT_PUBLISH=30

# Redis URL for distributed rate limiting (production)
# Leave empty to use in-memory store (development only)
REDIS_URL=

# ===========================================
# EMAIL MARKETING (Salesforce-like features)
# ===========================================
# SendGrid for email delivery
# Get key at: https://sendgrid.com
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxx

# Default sender configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Company Name

# ===========================================
# CRM INTEGRATIONS (Salesforce, HubSpot)
# ===========================================
# Salesforce OAuth (https://developer.salesforce.com/)
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_REDIRECT_URI=https://yourapp.com/api/crm/callback/salesforce

# HubSpot OAuth (https://developers.hubspot.com/)
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=
HUBSPOT_REDIRECT_URI=https://yourapp.com/api/crm/callback/hubspot

# ===========================================
# SMS & WHATSAPP (Twilio)
# ===========================================
# Twilio for SMS and WhatsApp messaging
# Get credentials at: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio phone number (E.164 format)
TWILIO_PHONE_NUMBER=+15551234567

# WhatsApp Business number (must be approved by Twilio)
TWILIO_WHATSAPP_NUMBER=+14155238886

# Webhook URL for message status callbacks
TWILIO_STATUS_CALLBACK_URL=https://yourapp.com/api/webhooks/twilio

# ===========================================
# SECURITY: CORS
# ===========================================
# Comma-separated list of allowed origins
# Production should list specific domains only
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# CDN & PERFORMANCE
# ===========================================
# CloudFront CDN URL for static assets (production)
CDN_URL=

# Image optimization
IMAGE_OPTIMIZATION_ENABLED=true

# ===========================================
# OPTIONAL: ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxxx

# AWS CloudWatch Logs
AWS_CLOUDWATCH_LOG_GROUP=
AWS_CLOUDWATCH_LOG_STREAM=

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development
DEBUG=false

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable demo mode (bypasses real authentication)
DEMO_MODE=true

# ============================================================
#
# USER-CONFIGURED (NOT in .env - via UI Settings)
#
# Each user connects their OWN social media accounts:
#
# ✅ Meta (Facebook/Instagram) - Meta Setup Wizard
# ✅ YouTube - OAuth connection
# ✅ Twitter/X - API credentials
# ✅ LinkedIn - OAuth connection
# ✅ TikTok - API credentials
# ✅ WordPress - Site URL + App Password
# ✅ FTP/SFTP - Server credentials
#
# ============================================================

